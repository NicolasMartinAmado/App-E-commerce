
<section class="section_account">
    <h1>Set a New Password</h1>

    <form action="/reset-passwordToken/:token" method="POST" class="form-group">
        <input type="password" name="newPassword" placeholder="New Password" required>
        <input type="password" name="confirmPassword" placeholder="Confirm New Password" required>
        <button id="pass" class="btn btn-primary" type="submit">Set New Password</button>
    </form>
</section>

<script>
    
document.getElementById(`pass`).addEventListener(`click`, function(){
     Swal.fire({
                        icon: 'success',
                        title: 'PASSWORD UPDATED SUCCESFULLY',
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        footer: `<a href="/login">Login with the new password</a>` 
                       
                    })
} )

</script>